<% if user_signed_in? %>

  <h1><%= @user.first_name + " " + @user.last_name %> - Mon Profil</h1>

  <div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

    </div>

  </div>

    <div class="row">

      <div class="col-md-6">
        <h3 style="text-align:left">Je suis l'organisateur de ...</h3>
        <ul>

          <% @user.created_events.each do |event| %>
          <li><%= event.name %>, le <%= event.date %> à <%= event.place %></li>
          <% end %>

        </ul>
      </div>

      <div class="col-md-6">
        <h3 style="text-align:left">Je participe à ...</h3>
        <ul>

          <% @user.attended_events.each do |event| %>
          <li><%= event.name %>, le <%= event.date %> à <%= event.place %></li>
          <% end %>

        </ul>
      </div>



    </div>

  </div>

<% else %>

<p class="alert alert-danger">Veuillez vous connecter pour visualiser votre profil !</p>

<% end %>
