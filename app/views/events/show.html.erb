<div class="row text-center">

  <div class="col-md-12">
    <p id="notice"><%= notice %></p>

    <h1><%= @event.name %></h1>
    <table class="table table-striped">
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Lieu</th>
        <th>Prix</th>
      </tr>

      <tr>
        <td><%= @event.description %></td>
        <td><%= @event.date %></td>
        <td><%= @event.place %></td>
        <td><%= @event.price %></td>

      </tr>

    </table>

    <h2>Liste des participants</h2>
    <table class="table table-striped">
      <tr>
        <th>Prénom</th>
        <th>Nom</th>
      </tr>

    <% @event.attendees.each do |attendee| %>

      <tr>
        <td><%= attendee.first_name %></td>
        <td><%= attendee.last_name %></td>
      </tr>

    <% end %>

    </table>

    <% if @event.attendees.include?(current_user) %>
    <%= button_to 'Je me désinscris', action: "unparticipate", class: "btn btn-danger" %>

    <% elsif !@event.attendees.include?(current_user) && user_signed_in? %>
    <!-- <%= button_to 'Je participe !', action: "participate", class: "btn btn-primary" %> -->

          <%= form_tag participation_path do %>
          <article>
          <% if flash[:error].present? %>
            <div id="error_explanation">
              <p><%= flash[:error] %></p>
            </div>
          <% end %>
          <label class="amount">
          <span>Amount: <%= @event.price.to_f / 100 %>€</span>
          </label>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="Paiement de l'événement"
                data-amount="<%= @event.price %>"
                data-currency="eur"
                data-locale="auto"></script>
          <% end %>


    <% else %>

    <% end %>

    <% if @event.creator == current_user %>
      <%= link_to 'Editer', edit_event_path(@event) %> |
      <% end %>

      <%= link_to 'Retour', events_path %>


  </div>

</div>
