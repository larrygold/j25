<div class="row text-center">

  <div class="col-md-6 col-md-offset-3">

<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "erreur") %> a empêché la mise à jour de cet événement :</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <label>Nom</label><br>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="field">
      <label>Description</label><br>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="field">
      <label>Date</label><br>
      <%= form.date_field :date, class: 'form-control' %>
    </div>

    <div class="field">
      <label>Lieu</label><br>
      <%= form.text_field :place, class: 'form-control' %>
    </div>

    <div class="field">
      <label>Prix (en centimes d'€)</label><br>
      <%= form.number_field :price, class: 'form-control', :min => '0', :step => '1' %>
    </div>

    <div class="actions">
      <%= form.submit 'Go !' %>
    </div>

  </div>

</div>
<% end %>
